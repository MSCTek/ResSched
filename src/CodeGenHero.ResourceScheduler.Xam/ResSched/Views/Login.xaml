<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:ResSched.ViewModels"
             x:Class="ResSched.Views.Login">

    <ContentPage.Content>
        <StackLayout HorizontalOptions="Center" Spacing="0" Margin="40">

            <Image Margin="0,40,0,0" HeightRequest="150">
                <Image.Source>
                    <UriImageSource Uri="{StaticResource FoxImage}" CacheValidity="100" CachingEnabled="True" />
                </Image.Source>
            </Image>

            <Label Text="Log In" HorizontalOptions="CenterAndExpand" FontAttributes="Bold" FontSize="Large" />
            <Grid Margin="0,20,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="auto" />
                </Grid.ColumnDefinitions>
                <Entry Grid.Column="0" Text="{Binding UserEnteredEmail}" />
                <Button Grid.Column="1" Text="{Binding UserButtonText}" Command="{Binding UserSignInCommand}"
                        Style="{StaticResource ButtonStyle}" IsEnabled="{Binding CanUserLogin}" />
            </Grid>

            <!--<Label Text="OR" HorizontalOptions="CenterAndExpand"  FontAttributes="Bold" Margin="20" />

            <Button Text="{Binding GuestButtonText}" Command="{Binding GuestSignInCommand}" Margin="0,20,0,10"
                    Style="{StaticResource ButtonStyle}" />-->

            <StackLayout IsVisible="{Binding IsUserVisible}" Padding="5,10">
                <StackLayout Orientation="Horizontal">
                    <Label Text="You are currently logged in as: " FontAttributes="Bold" />
                    <Label Text="{Binding UserPrincipalName}" />
                </StackLayout>
            </StackLayout>

            <Label Text="{Binding ErrorDescription} " HorizontalOptions="CenterAndExpand" FontAttributes="Bold" Margin="0,20" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>